<div id="header">
    <div class="header-top">
      <div class="container">
        <div class="pull-left auto-width-left">
          <ul class="top-menu menu-beta l-inline">
            <li><a href=""><i class="fa fa-home"></i> <%= t ".address" %></a></li>
            <li><a href=""><i class="fa fa-phone"></i> <%= t ".phone" %></a></li>
          </ul>
        </div>
        <div class="pull-right auto-width-right">
          <ul class="top-details menu-beta l-inline">
          <% if user_signed_in? %>
            <li><%= link_to "#" do %><i class="fa fa-user"></i><%= current_user.email %><% end %></li>
             <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-user"></i><%= t ".logout" %><% end %></li>
          <% else %>
            <li><a href="#"><i class="fa fa-user"></i><%= t ".account" %></a></li>
            <li><%= link_to t(".signup"), new_user_registration_path %></li>
            <li><%= link_to t(".signin"), new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
        <div class="clearfix"></div>
      </div> <!-- .container -->
    </div> <!-- .header-top -->
    <div class="header-body">
      <div class="container beta-relative">
        <div class="pull-left">
          <a href="index.html" id="logo">
          <%= image_tag "logo-cake.png", width: "200px" %>
          </a>
        </div>
        <div class="pull-right beta-components space-left ov">
          <div class="space10">&nbsp;</div>
          <div class="beta-comp">
            <form role="search" method="get" id="searchform" action="/">
                  <input type="text" value="" name="s" id="s" placeholder="Nhập từ khóa..." />
                  <button class="fa fa-search" type="submit" id="searchsubmit"></button>
            </form>
          </div>

          <div class="beta-comp">
            <div class="cart">
              <div class="beta-select"><i class="fa fa-shopping-cart"></i> <%= t ".cart" %> <i class="fa fa-chevron-down"></i></div>
              <div class="beta-dropdown cart-body">
                <div class="cart-item">
                  <div class="media">
                    <a class="pull-left" href="#"><%= image_tag "1.jpg" %></a>
                    <div class="media-body">
                      <span class="cart-item-title">Sample Woman Top</span>
                      <span class="cart-item-options">Size: XS; Colar: Navy</span>
                      <span class="cart-item-amount">1*<span>$49.50</span></span>
                    </div>
                  </div>
                </div>

                <div class="cart-item">
                  <div class="media">
                    <a class="pull-left" href="#"><%= image_tag "2.jpg" %></a>
                    <div class="media-body">
                      <span class="cart-item-title">Sample Woman Top</span>
                      <span class="cart-item-options">Size: XS; Colar: Navy</span>
                      <span class="cart-item-amount">1*<span>$49.50</span></span>
                    </div>
                  </div>
                </div>

                <div class="cart-item">
                  <div class="media">
                    <a class="pull-left" href="#"><%= image_tag "3.jpg" %></a>
                    <div class="media-body">
                      <span class="cart-item-title">Sample Woman Top</span>
                      <span class="cart-item-options">Size: XS; Colar: Navy</span>
                      <span class="cart-item-amount">1*<span>$49.50</span></span>
                    </div>
                  </div>
                </div>

                <div class="cart-caption">
                  <div class="cart-total text-right"><%= t ".total" %> <span class="cart-total-value">$34.55</span></div>
                  <div class="clearfix"></div>

                  <div class="center">
                    <div class="space10">&nbsp;</div>
                    <a href="checkout.html" class="beta-btn primary text-center"><%= t ".order" %> <i class="fa fa-chevron-right"></i></a>
                  </div>
                </div>
              </div>
            </div> <!-- .cart -->
          </div>
        </div>
        <div class="clearfix"></div>
      </div> <!-- .container -->
    </div> <!-- .header-body -->
    <div class="header-bottom" style="background-color: #0277b8;">
      <div class="container">
        <!-- <a class="visible-xs beta-menu-toggle pull-right" href="#"><span class='beta-menu-toggle-text'>Menu</span> <i class="fa fa-bars"></i></a> -->
        <%= link_to "#", class: "visible-xs beta-menu-toggle pull-right" do %>
          <span class='beta-menu-toggle-text'><%= t ".menu" %></span> <i class="fa fa-bars"></i>
        <% end %>
        <div class="visible-xs clearfix"></div>
        <nav class="main-menu">
          <ul class="l-inline ov">
            <li><%= link_to t(".home"), "#" %></li>
            <li><%= link_to t(".category") %>
              <ul class="sub-menu">
              <% category_names.each do |cat| %>
                <li><%= link_to cat.name, "#" %></li>
              <% end %>
              </ul>
            </li>
            <li><%= link_to t(".about"), "#" %></li>
            <li><%= link_to t(".contact"), "#" %></li>
          </ul>
          <div class="clearfix"></div>
        </nav>
      </div> <!-- .container -->
    </div> <!-- .header-bottom -->
  </div>
   <!-- #header -->
