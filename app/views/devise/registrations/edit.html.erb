<h2 class="text-center edit-user"><%= t ".edit" %> <%= resource_name.to_s.humanize %></h2>

<div class="form-edit">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="field col-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: t(".email"), disabled: :disabled %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="field col-md-3">
      <%= f.label :password %> <i><%= t ".leave" %></i><br />
      <%= f.password_field :password, autocomplete: t(".new-password"), class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%= t ".minimum" %></em>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="field col-md-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: t(".new-password"), class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field col-md-3">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: t(".current-password"), class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="actions col-md-3">
      <%= f.submit t(".update"), class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>

<h3 class="text-center"><%= t ".cancel" %></h3>

<p class="text-center"><%= t ".unhappy" %> <%= button_to t(".cancel"), registration_path(resource_name), class: "btn btn-success unhappy", data: { confirm: t(".sure") }, method: :delete %></p>

<p class="text-center"><%= link_to t(".back"), :back %></p>
